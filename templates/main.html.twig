<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>PIC1: {{title}}</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .fit-content {
      width: 1%;
      white-space: nowrap;
    }
  </style>
</head>
<body class="container mt-0">
<nav class="py-2 bg-body-secondary border-bottom">
  <div class="container d-flex flex-wrap">
    <ul class="nav me-auto">
    {% for item in navbar %}
      <li class="nav-item"><a class="nav-link link-body-emphasis px-2" href="{{ item.url }}">{{ item.name }}</a></li>
    {% endfor %}
    </ul>
    <ul class="nav">
      <li class="nav-item"><a href="logout.php" class="nav-link link-body-emphasis px-2">Logout</a></li>
    </ul>
  </div>
</nav>

<div class="card shadow-sm bg-light border-0 text-center mt-2 mb-3"
     style="max-width: 350px; border-radius: 10px;">
  <div class="card-body">
    <img src="{{ photo }}" class="rounded-circle mb-3" alt="User Photo"
      style="width: 100px; height: 100px; object-fit: cover; border: 4px solid #ddd;">
    <h5 class="card-title mb-1">{{ name }}</h5>
    <p class="text-muted small mb-0">User ID: {{ user_id }}</p>
    <p class="mb-0">Role: {{ role }}</p>
    <p class="mb-0">
      <a href="mailto:{{ email }}" class="text-decoration-none text-dark">
        <i class="bi bi-envelope"></i> {{ email }}</a>
    </p>
  </div>
</div>

{% if error_message is defined and error_message %}
  <div class="alert alert-danger" role="alert">
    {{ error_message }}
  </div>
{% endif %}

{% if success_message is defined and success_message %}
  <div class="alert alert-success" role="alert">
    {{ success_message }}
  </div>
{% endif %}

{% if select_form is defined %}
  <form method="GET">
    <div class="card">
      <div class="card-body">
        <div class="row g-3">
          {% for field in select_form %}
            {% if 'hidden' in field.vars.block_prefixes %}
              {{ form_widget(field) }}
            {% else %}
              <div class="col-md-6">
                {{ form_row(field, {'attr': {'class': 'form-control',
                                             'onchange': 'this.form.submit()'}}) }}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </form>
{% endif %}

{% if embed_file is defined and embed_file %}
  <div class="card my-3">
    <div class="card-header">
      <h5 class="mb-0">File Preview</h5>
    </div>
    <div class="card-body">
      <embed src="{{ embed_file }}" class="w-100" style="height: 500px;">
    </div>
  </div>
{% endif %}

{% if table is defined and table %}
<table class="table table-striped table-bordered table-hover w-auto">
  <thead class="table-dark sticky-top">
    <tr>
      {% for key in table|first|keys %}
        <th>{{ key }}</th>
      {% endfor %}
  </tr>
  </thead>
  <tbody>
    {% for row in table %}
      <tr>
        {% for value in row %}
          <td>
          {% if value is iterable and value.url is defined %}
            <a href="{{ value.url }}">{{ value.label }}</a>
          {% else %}
            {{ value }}
          {% endif %}
          </td>
        {% endfor %}
      </tr>
    {% endfor %}
  </tbody>
</table>
{% endif %}

{% if form is defined %}
  {{ form_start(form, {'attr': {'class': 'mt-3'}}) }}
    {% for field in form %}
      {% if field.vars.name not in ['_token', 'submit'] %}
        {% if 'url' in field.vars.block_prefixes and field.vars.value %}
          <label for="{{ field.vars.id }}">
            <a href="{{ field.vars.value }}" target="_blank" class="text-decoration-none">{{ field.vars.label }}</a>
          </label>
          {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
        {% else %}
          {{ form_row(field, {'attr': {'class': 'form-control'}}) }}
        {% endif %}
      {% endif %}
    {% endfor %}
    {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
  {{ form_end(form) }}
{% endif %}

</body>
</html>
